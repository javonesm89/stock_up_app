<section>
    <h3>Select the stock you'd like buy.</h3>
    
    <form action='/orders' method="POST">

       
        <% @stocks.each do |stock| %>
                 <input type="radio" value="<%= stock.id %>" name="stock_id"><%= stock.name %><br>
        <% end %>

        <h4>Next, select how many shares you want:</h4>
        <input type="number" name="num_of_shares" min="1" max="50">
    
        <button type="submit">Create Order</button>
    </form>

</section>

